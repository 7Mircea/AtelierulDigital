<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp">

        <View
            android:id="@+id/view1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/orangeYellow" />

        <View
            android:id="@+id/view2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/veryLightGreen" />

        <View
            android:id="@+id/view3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"

            android:layout_toEndOf="@id/view2"
            android:background="@color/lightGreen" />

        <View
            android:id="@+id/view4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@color/lightRed" />

        <TextView
            android:id="@+id/textview01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:text="@string/scroll_view_content" />

        <TextView
            android:id="@+id/textview02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview01"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:text="@string/scroll_view_content" />

        <TextView
            android:id="@+id/textview03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview02"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:text="@string/scroll_view_content" />

        <TextView
            android:id="@+id/textview04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview03"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:text="@string/scroll_view_content" />

        <TextView
            android:id="@+id/textview05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview04"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:text="@string/scroll_view_content" />

        <TextView
            android:id="@+id/textview06"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview05"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:text="@string/scroll_view_content" />

        <TextView
            android:id="@+id/textview07"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview06"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:text="@string/scroll_view_content" />

        <TextView
            android:id="@+id/textview08"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview07"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:text="@string/scroll_view_content" />

        <TextView
            android:id="@+id/textview09"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview08"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:text="@string/scroll_view_content" />

        <TextView
            android:id="@+id/textview10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview09"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp"
            android:text="@string/scroll_view_content" />


    </RelativeLayout>

</ScrollView>